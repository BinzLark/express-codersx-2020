extends ../layouts/app.pug
block content 
  h1 Add transaction
  div.mt-5.f-lex.justify-content-center.align-items-center
    form(method="post")
      input(type="hidden" name="_csrf" value=csrf)
      .form-group
        label(for='title') User:
        select.custom-select(name='idUser')
          each user in users
            option(value= user.id)= user.username
      .form-group.my-4
        label(for='description') Book:
        select.custom-select(name='idBook')
          each book in books
            option(value= book.id)= book.title
      .form-group.mb-4
        label(for='amount') Amount:
        input.form-control(name='amount' type="number" value="1" min="1")
      button.btn.btn-primary.float-right(type='submit') Create